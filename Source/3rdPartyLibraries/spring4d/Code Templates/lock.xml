<?xml version="1.0" encoding="utf-8" ?>
<codetemplate	xmlns="http://schemas.borland.com/Delphi/2005/codetemplates"
				version="1.0.0">
	<template name="lock" invoke="auto">
		<description>
        Lock object
		</description>
		<author>
		Zuo Baoquan (Paul)
		</author>
		<point name="obj">
			<text>
				obj
			</text>
			<hint>
				sync object
			</hint>
		</point>
		<code language="Delphi" context="methodbody" delimiter="|"><![CDATA[
Lock(|obj|,
|*|procedure
|*|begin
|*||*||end|
|*|end
);
		]]>
		</code>
	</template>
</codetemplate>