<?xml version="1.0" encoding="utf-8" ?>
<codetemplate	xmlns="http://schemas.borland.com/Delphi/2005/codetemplates"
				version="1.0.0">
	<template name="enumc" invoke="auto">
		<description>
		Enumerates child controls of a container in tab order.
		</description>
		<author>                  
		Zuo Baoquan (Paul)
		</author>
		<point name="parentControl">
			<text>
				parentControl
			</text>
			<hint>
				Parent control
			</hint>
		</point>
		<code language="Delphi" context="methodbody" delimiter="|"><![CDATA[
EnumerateControls(|parentControl|,
|*|function(control: TWinControl): Boolean
|*|begin
|*||*||end|
|*|end
);
		]]>
		</code>
	</template>
</codetemplate>
